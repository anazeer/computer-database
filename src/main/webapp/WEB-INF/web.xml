<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	
	<!-- Description -->
	<description>Computer database web application</description>
	
	<!-- Display name -->
	<display-name>Web Application</display-name>

	<!-- Include spring context and dispatcher -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring-context.xml /WEB-INF/spring-dispatcher-servlet.xml</param-value>
	</context-param>

	<!-- Spring context listener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- Initialize the DispatcherServlet -->
	<servlet>
   		<servlet-name>spring-dispatcher</servlet-name>
        	<servlet-class>
         	    org.springframework.web.servlet.DispatcherServlet
        	</servlet-class>
     	<load-on-startup>1</load-on-startup>
	</servlet>  
	
	<!-- Map the request in order to be handled by the DispatcherServlet -->
	<servlet-mapping>
		<servlet-name>spring-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- Error pages -->
	
	<!-- Acces denied -->
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/error/403.jsp</location>
	</error-page>
	
	<!-- Page not found -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/404.jsp</location>
	</error-page>
	
	<!-- Page error -->
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/error/500.jsp</location>
	</error-page>
	
</web-app>